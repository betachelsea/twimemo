
<% if signed_in? %>
    ようこそ <%= "#{@name}" %> !
    <br />
    <%= form_tag('/tweet') do %>
        <%= text_area_tag 'tweet' %>
        <%= submit_tag "つぶやく" %>
    <% end %>
    <br />
    <%= link_to "サインアウトする", "/signout" %>
<% else %>
    <%= link_to "Twitterでログインする", "/auth/twitter" %>
<% end %>
